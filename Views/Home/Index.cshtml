@model CnpjResultado
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@*O FORMS IRÁ PEGAR MEUS INPUTS E ENVIAR PARA A MINHA CONTROLLER *@
<form method="post" asp-action="Index" asp-controller="Home">
@*MEU TEMA*@
<h2 class="text-center">Cadastro Nacional da Pessoa Jurídica</h2> 
<br />
@*ONDE IRÁ O CNPJ PARA SER CONSULTADO*@
<div class="form-group"> 
    <label for= "cnpj">CNPJ:</label> 
    <input class = "form-control" name="cnpj" data-mask ="00.000.000/0000-00" required/>
</div>
<br />
@*MEU BOTÃO DE CONSULTAR*@
<div class="text-black panel-body"> 
    <button type="submit" class="btn btn-danger ">Consultar</button>
</div>
</form>

<form method="post" asp-action="Add" asp-controller="Home">

    @if (Model != null)
    {
        <h2 class="text-center">Rsultado da Pesquisa</h2>
        <br />
        <table class="table  table-danger border-primary text-black ">
            <thead>
                <tr>
                    <th>CNPJ</th>
                    <th>Razão Social</th>
                    <th>Fantasia</th>
                    <th>Endereço</th>
                    <th>Número</th>
                    <th>Municipio</th>
                    <th>UF</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Cnpj</td>
                    <td>@Model.Nome</td>
                    <td>@Model.Fantasia</td>
                    <td>@Model.Logradouro</td>
                    <td>@Model.Numero</td>
                    <td>@Model.Municipio</td>
                    <td>@Model.Uf</td>
                </tr>

            </tbody>
        </table>
        <br />
        <input type ='hidden'name="cnpj" value=" @Model.Cnpj"/>
        <input type='hidden' name="nome" value=" @Model.Nome" />
        <input type='hidden' name="fantasia" value=" @Model.Fantasia" />
        <input type='hidden' name="logradouro" value=" @Model.Logradouro" />
        <input type='hidden' name="numero" value=" @Model.Numero" />
        <input type='hidden' name="municipio" value=" @Model.Municipio" />
        <input type='hidden' name="uf" value=" @Model.Uf" />
    }
</form>







